---
import AboutMe from "../components/sections/AboutMe.astro";
import Proyectos from "../components/sections/Proyectos.astro";
import Headline from "../components/sections/Headline.astro";
import Skills from "../components/sections/Skills.astro";
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import Experience from "../components/sections/Experience.astro";
---

<Layout>
  <header>
    <NavBar />
  </header>
  <main>
    <div>
      <Headline />
      <hr />
      <Experience />
      <hr />
      <Proyectos />
      <hr />
      <AboutMe />
      <hr />
      <Skills />
    </div>
  </main>
</Layout>

<style>
  header {
    max-width: 768px;
    margin: auto;
  }

  main {
    max-width: 768px;
    margin: auto;
    margin-bottom: 3rem;
  }

  div {
    padding: 1.25rem;
    margin: auto;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  hr {
    border: none;
    border-top: 2px dotted rgba(255, 255, 255, 0.2);
    background-color: none;
  }

  /*  MEDIA QUERIES  */
  @media (max-width: 768px) {
    div {
      gap: 2.5rem;
    }
  }
</style>
