---
import ArticleTarjetasChicas from "../ArticleTarjetasChicas.astro";
import ArticleTarjetasGrandes from "../ArticleTarjetasGrandes.astro";
import Section from "../Section.astro";

const propsTarjetasGrandes = [
  {
    titulo: "HandyPro",
    img: [
      "/proyectos/handyPro1.webp",
      "/proyectos/handyPro2.webp",
      "/proyectos/handyPro3.webp",
      "/proyectos/handyPro4.webp",
    ],
    descripcion:
      "Plataforma que conecta profesionales con clientes mediante solicitudes de trabajo, donde los profesionales se postulan y los clientes eligen al candidato ideal.",
    skills: [
      "JavaScript",
      "TypeScript",
      "NestJs",
      "PostgresDB",
      "TypeORM",
      "Stripe",
      "AWS",
      "JWT",
    ],
    deploy: "https://www.youtube.com/watch?v=IgABM_Klb1o",
    code: "https://github.com/Nahuel417/handypro-back",
  },
  {
    titulo: "PadelSport",
    img: [
      "/proyectos/padelSport1.webp",
      "/proyectos/padelSport2.webp",
      "/proyectos/padelSport3.webp",
      "/proyectos/padelSport4.webp",
    ],
    descripcion:
      "Gestor de turnos diseñado para organizar citas de manera eficiente, permitiendo a los usuarios programar, modificar o cancelar turnos según sus necesidades.",
    skills: [
      "JavaScript",
      "TypeScript",
      "ReactJS",
      "PostgresDB",
      "TypeORM",
      "ReactRouter",
      "Bootstrap",
      "Vite",
    ],
    deploy: "https://youtu.be/EkI8Z0UtpQE",
    code: "https://github.com/Nahuel417/PadelSport",
  },
];

const propsTarjetasChicas = [
  {
    titulo: "E-commerce API",
    descripcion: "asd",
    skills: [
      "TypeScript",
      "NestJs",
      "PostgresDB",
      "Docker",
      "Cloudinary",
      "JWT",
      "Swagger",
    ],
    code: "https://github.com/Nahuel417/E-commerce-Api",
    deploy: "https://ecommerce-api-mbho.onrender.com/api",
  },
  {
    titulo: "InnovatechShop",
    descripcion: "asd",
    skills: [
      "JavaScript",
      "ReactJS",
      "Vite",
      "MySQL",
      "Bootstrap",
      "Sequelize",
      "Express",
    ],
    code: "https://github.com/Nahuel417/InnovatechShop",
    deploy: "",
  },
];
---

<Section>
  <div class="contenedor-proyectos">
    <div class="titulo">
      <h1>Proyectos</h1>
      <i class="bi bi-terminal"></i>
    </div>

    <div class="contenedor-grande-tarjetas">
      <ArticleTarjetasGrandes
        titulo={propsTarjetasGrandes[0].titulo}
        img={propsTarjetasGrandes[0].img}
        descripcion={propsTarjetasGrandes[0].descripcion}
        skills={propsTarjetasGrandes[0].skills}
        deploy={propsTarjetasGrandes[0].deploy}
        code={propsTarjetasGrandes[0].code}
      />

      <ArticleTarjetasGrandes
        titulo={propsTarjetasGrandes[1].titulo}
        img={propsTarjetasGrandes[1].img}
        descripcion={propsTarjetasGrandes[1].descripcion}
        skills={propsTarjetasGrandes[1].skills}
        deploy={propsTarjetasGrandes[1].deploy}
        code={propsTarjetasGrandes[1].code}
      />
    </div>

    <div class="contenedor-chico-tarjetas">
      <ArticleTarjetasChicas
        titulo={propsTarjetasChicas[0].titulo}
        descripcion={propsTarjetasChicas[0].descripcion}
        skills={propsTarjetasChicas[0].skills}
        deploy={propsTarjetasChicas[0].deploy}
        code={propsTarjetasChicas[0].code}
      />

      <ArticleTarjetasChicas
        titulo={propsTarjetasChicas[1].titulo}
        descripcion={propsTarjetasChicas[1].descripcion}
        skills={propsTarjetasChicas[1].skills}
        deploy={propsTarjetasChicas[1].deploy}
        code={propsTarjetasChicas[1].code}
      />
    </div>
  </div>
</Section>

<style>
  .contenedor-proyectos {
    display: flex;
    flex-direction: column;
  }

  .titulo {
    display: flex;
    align-items: stretch;
    gap: 8px;
  }

  .titulo h1 {
    margin-bottom: 20px;
    font-size: 30px;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
  }

  .titulo i {
    color: rgba(255, 255, 255, 0.9);
    margin-left: 5px;
    font-size: 35px;
  }

  .contenedor-grande-tarjetas {
    display: flex;
    flex-direction: column;
    gap: 30px;
    margin-bottom: 30px;
  }

  .contenedor-chico-tarjetas {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 25px;
  }
</style>
