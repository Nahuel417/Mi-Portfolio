---
import CajaLinks from "../CajaLinks.astro";
import Section from "../Section.astro";
---

<Section>
  <div class="contenedor-headline">
    <div class="caja-foto">
      <figure>
        <img src="/fotoDePerfil.webp" alt="foto-perfil" width="100%" />
      </figure>
      <div>
        <h1>Nahuel Banco</h1>
        <h3>Desarrollador Web Fullstack</h3>
        <p>
          +2 a√±os de experiencia en desarrollo full stack, disfrutando tanto del
          front-end como del back-end.
        </p>
      </div>
    </div>

    <CajaLinks />
  </div>
</Section>

<style>
  .contenedor-headline {
    display: flex;
    flex-direction: column;
    margin-top: 4rem;
  }

  .caja-foto {
    margin-bottom: 20px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 50px;
  }

  .caja-foto h1 {
    font-size: 44px;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
  }

  .caja-foto h3 {
    position: relative;
    font-size: 21px;
    margin: 0 0 20px 0;
    top: -5px;
  }

  .caja-foto p {
    font-weight: 600;
    color: rgba(203, 213, 225, 0.7);
  }

  .caja-foto figure {
    width: 45%;
  }

  .caja-foto img {
    border-radius: 50%;
    border: 10px solid #161e2d;
  }

  /*  MEDIA QUERIES  */
  @media (max-width: 768px) {
    .caja-foto {
      margin-bottom: 10px;
      gap: 30px;
    }

    .caja-foto figure {
      min-width: 178px;
    }
  }

  @media (max-width: 640px) {
    .caja-foto {
      flex-direction: column;
      gap: 15px;
    }

    .caja-foto figure {
      max-width: 210px;
    }

    .caja-foto div {
      text-align: center;
    }

    .caja-foto h1 {
      font-size: 40px;
    }

    .caja-foto h3 {
      font-size: 18px;
      margin: 0 0 10px 0;
    }

    .caja-foto p {
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    .caja-foto h1 {
      font-size: 38px;
    }
  }
</style>
