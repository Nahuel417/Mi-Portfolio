---
import Git from "./svgs/Git.astro";
import Github from "./svgs/Github.astro";
import Docker from "./svgs/Docker.astro";
import Stripe from "./svgs/Stripe.astro";
import Gitlab from "./svgs/Gitlab.astro";
---

<article>
  <div class="caja-soft">
    <h3>DevOps & Metodolog√≠as</h3>
    <div class="caja-skills">
      <div class="caja-svg">
        <Git />
        <p>Git</p>
      </div>
      <div class="caja-svg">
        <Github />
        <p>Github</p>
      </div>
      <div class="caja-svg">
        <Docker />
        <p>Docker</p>
      </div>
      <div class="caja-svg">
        <img src="/scrum.png" alt="scrum" />
        <p>Scrum</p>
      </div>
      <div class="caja-svg">
        <Stripe />
        <p>Stripe</p>
      </div>
      <div class="caja-svg">
        <Gitlab />
        <p>GitLab</p>
      </div>
    </div>
  </div>
</article>

<style>
  article {
    width: 48%;
    border-radius: 8px;
    border: 1px solid;
    padding: 20px 25px;
    background: #2b3544;
  }

  .caja-soft h3 {
    font-size: 20px;
    margin-bottom: 20px;
    text-align: center;
  }

  .caja-skills {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    gap: 30px;
  }

  .caja-svg {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .caja-svg img {
    width: 25px;
    height: 25px;
  }
</style>
