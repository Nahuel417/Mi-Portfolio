---
const { educacion } = Astro.props;
---

<div class="caja-timeline">
  <ol class="relative border-s border-gray-200 dark:border-gray-700">
    {
      educacion.map((obj: any) => (
        <li>
          <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />

          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            {obj.lugar}
          </h3>
          <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
            {obj.titulo}
          </p>
          <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
            {obj.fecha}
          </time>
        </li>
      ))
    }
  </ol>
</div>

<style>
  .caja-timeline {
    display: flex;
    padding: 10px 10px 0px 10px;
  }

  .caja-timeline ol {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    padding: 10px 10px 0px 10px;
    width: 100%;
    height: 300px;
  }

  .caja-timeline li {
    margin-left: 15px;
  }

  .caja-timeline li div {
    width: 15px;
    height: 15px;
    left: -8px;
    background-color: #f171b3;
  }

  .caja-timeline h3 {
    color: rgba(241, 113, 179, 0.9);
    font-size: 18px;
  }

  .caja-timeline time {
    font-weight: 500;
    margin-bottom: 20px;
    color: rgba(203, 213, 225, 0.5);
  }

  .caja-timeline p {
    font-size: 14px;
    font-weight: 700;
    color: rgba(203, 213, 225, 0.8);
    margin: 0;
  }

  @media (max-width: 768px) {
    .caja-timeline ol {
      height: 100%;
    }
  }
</style>
